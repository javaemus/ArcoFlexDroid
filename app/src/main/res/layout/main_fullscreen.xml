<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/EmulatorFrame"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/emu_back_color">

	<net.arcoflexdroid.views.InputView android:id="@+id/InputView"
		android:soundEffectsEnabled="false" android:visibility="visible"
		android:adjustViewBounds="false" android:scaleType="fitXY"
		android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_gravity="bottom|center_horizontal"/>

	<FrameLayout android:id="@+id/EmulatorFrame2"
		android:layout_width="fill_parent"
		android:layout_height="0dip" android:layout_weight="1.0"
		>

		<ImageView
			android:id="@+id/EmulatorScreen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" />

	</FrameLayout>

</FrameLayout>
